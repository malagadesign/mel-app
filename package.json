{
  "name": "app",
  "private": "true",
  "dependencies": {
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "build:css": "tailwindcss -c ./tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch:css": "tailwindcss -c ./tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch --poll"
  }
}
